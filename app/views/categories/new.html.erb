<h1 align="center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>


<%= form_for @category do |f| %>
    <div class="form-group">
    <div class="col-sm-2 control-label">
        <%= f.label :category %>
    </div>
    <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
    </div>
    <div>

    <div class="form-group">
    <div class="col-sm-10">
        <%= f.submit class: "btn btn-warning btn-lg" %>
    </div>
    </div>
<% end %>
    <div class="col-sm-12 col-sm-offset-2"> 
    [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
